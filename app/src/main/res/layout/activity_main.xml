<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Background Music Player"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Track Selection Section -->
    <TextView
        android:id="@+id/tvSelectTrack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a Track:"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        android:layout_marginTop="32dp" />

    <!-- Track 1 Button -->
    <Button
        android:id="@+id/btnTrack1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Demo Track 1"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSelectTrack"
        android:layout_marginTop="16dp" />

    <!-- Track 2 Button -->
    <Button
        android:id="@+id/btnTrack2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Demo Track 2"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnTrack1"
        android:layout_marginTop="8dp" />

    <!-- Track 3 Button -->
    <Button
        android:id="@+id/btnTrack3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Demo Track 3"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnTrack2"
        android:layout_marginTop="8dp" />

    <!-- Playback Status Section -->
    <TextView
        android:id="@+id/tvStatusLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status:"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnTrack3"
        android:layout_marginTop="32dp" />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Stopped"
        android:textSize="18sp"
        android:textColor="@android:color/holo_blue_dark"
        app:layout_constraintStart_toEndOf="@id/tvStatusLabel"
        app:layout_constraintTop_toTopOf="@id/tvStatusLabel"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp" />

    <!-- Current Track -->
    <TextView
        android:id="@+id/tvCurrentTrackLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Track:"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvStatusLabel"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tvCurrentTrack"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="No track selected"
        android:textSize="16sp"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/tvCurrentTrackLabel"
        app:layout_constraintTop_toTopOf="@id/tvCurrentTrackLabel"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp" />

    <!-- Seek Bar Section -->
    <TextView
        android:id="@+id/tvPosition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvCurrentTrack"
        android:layout_marginTop="24dp" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:max="100"
        app:layout_constraintStart_toEndOf="@id/tvPosition"
        app:layout_constraintEnd_toStartOf="@id/tvDuration"
        app:layout_constraintTop_toTopOf="@id/tvPosition"
        app:layout_constraintBottom_toBottomOf="@id/tvPosition"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/tvDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvPosition" />

    <!-- Playback Control Buttons -->
    <LinearLayout
        android:id="@+id/controlButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/seekBar"
        android:layout_marginTop="24dp">

        <Button
            android:id="@+id/btnPlay"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Play"
            android:enabled="false"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnPause"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Pause"
            android:enabled="false"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnStop"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Stop"
            android:enabled="false" />

    </LinearLayout>

    <!-- Instructions -->
    <TextView
        android:id="@+id/tvInstructions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Select a track to start playback. Music will continue playing even when you close the app or press the home button. Use the notification to control playback from outside the app."
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>

